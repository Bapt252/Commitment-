# Variables d'environnement requises pour le projet Commitment
# Copiez ce fichier vers .env et remplissez les valeurs appropriées

# ======================
# CLÉS API
# ======================

# OpenAI API Key - pour les services de parsing CV et jobs
# Obtenez votre clé sur: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Maps API Key - pour les services de géolocalisation
# Obtenez votre clé sur: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Google Maps API Key spécifique au client (optionnel, pour restreindre les domaines)
GOOGLE_MAPS_API_KEY_CLIENT=your-client-restricted-google-maps-api-key-here

# ======================
# BASE DE DONNÉES
# ======================

# MongoDB URI - pour le stockage des données
MONGODB_URI=mongodb://localhost:27017/cv_data

# PostgreSQL URL - pour le service CV parser
POSTGRES_URL=postgresql://ssm_user:password@localhost:5432/cv_parser_db

# MongoDB URI pour les tests
TEST_MONGODB_URI=mongodb://localhost:27017/test_cv_data

# ======================
# REDIS (CACHE)
# ======================

# Redis URL - pour le cache et les sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_KEY_PREFIX=cv_parser:

# ======================
# MINIO (STOCKAGE FICHIERS)
# ======================

# MinIO configuration pour le stockage des fichiers
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_CV=cv-documents
MINIO_BUCKET_TEMP=temp-uploads

# ======================
# CONFIGURATION SERVEUR
# ======================

# Ports des services
PORT=5000
API_GATEWAY_PORT=5050
CV_PARSER_PORT=5051
MATCHING_SERVICE_PORT=5052
USER_SERVICE_PORT=5054
NOTIFICATION_SERVICE_PORT=5055

# Environnement (development, testing, production)
NODE_ENV=development
DEBUG=true

# Hosts
HOST=0.0.0.0

# ======================
# SÉCURITÉ
# ======================

# JWT Secret pour l'authentification
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRY=24h

# CORS Origins (séparés par des virgules)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ======================
# MODÈLES IA
# ======================

# Configuration OpenAI
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.1
OPENAI_TIMEOUT=30000

# ======================
# UPLOADS ET FICHIERS
# ======================

# Configuration des uploads
UPLOAD_FOLDER=uploads
UPLOAD_PATH=/tmp/uploads
MAX_FILE_SIZE=10485760
SUPPORTED_FORMATS=pdf,doc,docx,txt,jpg,jpeg,png

# ======================
# LOGGING ET MONITORING
# ======================

# Configuration des logs
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/app/cv-parser.log
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# Prometheus monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_ENDPOINT=/metrics
PROMETHEUS_PREFIX=cv_parser_

# ======================
# FONCTIONNALITÉS
# ======================

# Feature flags
FEATURE_AI_ENHANCEMENT=true
FEATURE_OCR_FALLBACK=true
FEATURE_INTELLIGENT_CACHING=true
FEATURE_REALTIME_VALIDATION=true
FEATURE_MANUAL_FALLBACK=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BETA_ENABLED=false

# OCR Configuration
ENABLE_OCR=true
OCR_ENGINE=tesseract
OCR_LANGUAGES=fra+eng
OCR_CONFIDENCE=0.8

# WebSocket
ENABLE_WEBSOCKETS=true
WS_PING_TIMEOUT=60000
WS_PING_INTERVAL=25000

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ======================
# URLS DES SERVICES
# ======================

# URLs des services internes
API_GATEWAY_URL=http://api-gateway:5050
MATCHING_SERVICE_URL=http://matching-service:5052
USER_SERVICE_URL=http://user-service:5054
NOTIFICATION_SERVICE_URL=http://notification-service:5055
