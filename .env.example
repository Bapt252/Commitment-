# =============================================================================
# CONFIGURATION SUPERSMARTMATCH UNIFIÉ
# =============================================================================

# API Keys
OPENAI=your_openai_api_key_here

# Services URLs (pour développement local)
CV_PARSER_URL=http://localhost:5051
JOB_PARSER_URL=http://localhost:5053
SUPERSMARTMATCH_UNIFIED_URL=http://localhost:5052
API_URL=http://localhost:5050
FRONTEND_URL=http://localhost:3000

# Base de données
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/nexten
REDIS_URL=redis://localhost:6379/0

# Configuration Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Stockage MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Configuration ML SuperSmartMatch Unifié (optionnel)
ENABLE_SEMANTIC_ANALYSIS=true
ENABLE_NER_EXTRACTION=true
ENABLE_AUTO_LEARNING=true

# Configuration parsing
OPENAI_MODEL=gpt-4o-mini
CIRCUIT_BREAKER_ENABLED=false
MAX_RETRIES=3

# Monitoring et logging
ENABLE_PROMETHEUS_METRICS=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# APIs externes
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
WEBHOOK_SECRET=your-secret-key

# Configuration environnement
NODE_ENV=development
DEBUG=false

# Ports des services (pour référence)
# API Principale: 5050
# CV Parser: 5051  
# SuperSmartMatch Unifié: 5052
# Job Parser: 5053
# Data Adapter: 5054
# User Behavior: 5057
# Feedback Service: 5058
# Personalization: 5060
# Frontend: 3000
# MinIO: 9000 (API) / 9001 (Console)
# Redis Commander: 8081
# RQ Dashboard: 9181
