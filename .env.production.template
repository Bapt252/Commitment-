# ===========================================
# SUPERSMARTMATCH V2 - PRODUCTION ENVIRONMENT
# ===========================================

# ===========================================
# SECURITY & AUTHENTICATION
# ===========================================
JWT_SECRET=your_super_secure_jwt_secret_change_this_in_production_512bits_minimum
REDIS_PASSWORD=your_secure_redis_password_change_this
POSTGRES_PASSWORD=your_secure_postgres_password_change_this

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=ssm_user
POSTGRES_DB=supersmartmatch

# ===========================================
# MINIO (Object Storage)
# ===========================================
MINIO_ACCESS_KEY=supersmartmatch_admin
MINIO_SECRET_KEY=your_secure_minio_secret_key_change_this

# ===========================================
# MONITORING & ADMIN
# ===========================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_change_this
GRAFANA_SECRET_KEY=your_secure_grafana_secret_key_change_this

# ===========================================
# EMAIL CONFIGURATION (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ===========================================
# SSL/TLS CONFIGURATION
# ===========================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/nginx/ssl/supersmartmatch.crt
SSL_KEY_PATH=/etc/nginx/ssl/supersmartmatch.key

# ===========================================
# PERFORMANCE TUNING
# ===========================================
NODE_MAX_OLD_SPACE_SIZE=2048
UV_THREADPOOL_SIZE=128

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_CORS=true
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# ===========================================
# BUSINESS CONFIGURATION
# ===========================================
MAX_CV_FILE_SIZE_MB=10
MAX_JOB_FILE_SIZE_MB=5
MATCHING_SCORE_THRESHOLD=75
CACHE_TTL_SECONDS=3600
SESSION_TIMEOUT_HOURS=24

# ===========================================
# DEVELOPMENT/STAGING OVERRIDES
# ===========================================
# Uncomment for development environment
# NODE_ENV=development
# LOG_LEVEL=debug
# ENABLE_API_DOCS=true
